{erl_opts,[debug_info,
           {src_dirs,["asn1","src"]},
           nowarn_export_all,
           {i,"include"},
           {i,"../fast_xml/include"},
           {i,"_build/default/lib/fast_xml/include"}]}.
{provider_hooks,[{pre,[{compile,{pc,compile}},
                       {clean,{pc,clean}},
                       {compile,{asn,compile}},
                       {clean,{asn,clean}}]}]}.
{plugins,[rebar3_hex,pc,provider_asn1]}.
{deps,[{p1_utils,"1.0.18"},
       {fast_xml,"1.1.40"},
       {fast_tls,"1.1.5"},
       {ezlib,"1.0.7"},
       {idna,"6.0.0"},
       {stringprep,"1.0.19"}]}.
{port_env,[{"LDFLAGS","$LDFLAGS "},
           {"CFLAGS","$CFLAGS -DHAS_ERTS_EXIT -g -O2 -Wall"}]}.
{port_specs,[{"priv/lib/jid.so",["c_src/jid.c"]},
             {"priv/lib/xmpp_uri.so",["c_src/xmpp_uri.c"]},
             {"priv/lib/xmpp_lang.so",["c_src/xmpp_lang.c"]}]}.
{clean_files,["c_src/jid.gcda","c_src/jid.gcno"]}.
{cover_enabled,true}.
{cover_export_enabled,true}.
{xref_checks,[undefined_function_calls,undefined_functions,
              deprecated_function_calls,deprecated_functions]}.
{profiles,[{test,[{erl_opts,[{src_dirs,["src","test"]}]}]}]}.
{overrides,[]}.
