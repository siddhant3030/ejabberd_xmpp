{provider_hooks,[{pre,[{compile,{pc,compile}},{clean,{pc,clean}}]}]}.
{plugins,[rebar3_hex,pc]}.
{deps,[{stun,"1.0.32"},{fast_tls,"1.1.5"},{p1_utils,"1.0.18"}]}.
{port_env,[{"LDFLAGS","$LDFLAGS "},{"CFLAGS","$CFLAGS -g -O2 -Wall"}]}.
{erl_opts,[debug_info,
           {src_dirs,["src"]},
           {i,"include"},
           {i,"deps/stun/include"},
           {i,"../stun/include"},
           {d,'STRONG_RAND_BYTES'},
           {d,'RAND_UNIFORM'}]}.
{port_specs,[{"priv/lib/esip_drv.so",["c_src/esip_codec.c"]}]}.
{clean_files,["c_src/esip_codec.gcda","c_src/esip_codec.gcno"]}.
{cover_enabled,true}.
{cover_export_enabled,true}.
{xref_checks,[undefined_function_calls,undefined_functions,
              deprecated_function_calls,deprecated_functions]}.
{profiles,[{test,[{erl_opts,[{src_dirs,["src","test"]}]}]}]}.
{overrides,[]}.
